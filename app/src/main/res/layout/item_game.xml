<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/tv_whiteUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="whiteUser"
        app:layout_constraintStart_toStartOf="parent"

        tools:layout_editor_absoluteY="39dp" />

    <TextView
        android:id="@+id/tv_blackUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:text="blackUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_whiteUsername"
        tools:layout_editor_absoluteY="39dp" />

    <TextView
        android:id="@+id/tv_whiteResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_whiteUsername"
        app:layout_constraintStart_toStartOf="@+id/tv_whiteUsername"
        app:layout_constraintTop_toBottomOf="@+id/tv_whiteUsername" />

    <TextView
        android:id="@+id/tv_blackResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_blackUsername"
        app:layout_constraintStart_toStartOf="@+id/tv_blackUsername"
        app:layout_constraintTop_toBottomOf="@+id/tv_blackUsername" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="88dp"
        android:layout_height="24dp"
        android:layout_margin="10dp"
        android:inputType="date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_blackResult"
        app:layout_constraintStart_toEndOf="@+id/tv_whiteResult" />
</androidx.constraintlayout.widget.ConstraintLayout>